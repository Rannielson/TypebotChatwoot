{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // Pula verificação de tipos em node_modules (mais rápido)
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true, // Garante que cada arquivo pode ser transpilado isoladamente
    "jsx": "react-jsx",
    "incremental": true, // Habilita compilação incremental (mais rápido em rebuilds)
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    // Otimizações adicionais
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true, // Remove variáveis não usadas
    "noUnusedParameters": true, // Remove parâmetros não usados
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
